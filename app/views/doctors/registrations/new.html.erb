<div class="flex justify-center items-center h-screen">
  <div class="top-24 absolute mt-16 text-center py-3 mx-auto pt-5 bg-blue-500 rounded shadow w-96 mt-24 flex flex-col">
    <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "rounded-lg"}, data: {turbo: false}) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
      <%= f.input :first_name, input_html: { class: "text-center h-8 appearance-none rounded-full py-2 px-3 border-0 flex flex-col mx-auto my-2"} %>
      <%= f.input :last_name, input_html: { class: "text-center bg-cyan-300 h-8 appearance-none rounded-full py-2 px-3 border-0 flex flex-col mx-auto my-2"} %>
      <%= f.input :phone, input_html: { class: "text-center bg-cyan-300 h-8 appearance-none rounded-full py-2 px-3 border-0 flex flex-col mx-auto my-2"} %>
      <%= f.input :doctor_category_id, input_html: { class: "text-center bg-cyan-300 h-8 appearance-none rounded-full py-2 px-3 border-0 flex flex-col mx-auto my-2"} %>
      <%= f.input :password, input_html: { class: "text-center bg-cyan-300 h-8 appearance-none rounded-full py-2 px-3 border-0 flex flex-col mx-auto my-2"} %>
      <%= f.input :password_confirmation, input_html: { class: "text-center bg-cyan-300 h-8 appearance-none rounded-full py-2 px-3 border-0 flex flex-col mx-auto my-2"} %>
      <%= f.button :submit, 'Sign up', class: "" %>
    <% end %>
  </div>
</div>
