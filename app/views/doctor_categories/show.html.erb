<div class="flex justify-center items-center w-full">
  <div class="w-1/3 top-24 absolute flex flex-row mt-24 mx-auto justify-center">
    <% @doctor_category.doctors.each do |doctor| %>
      <div class="bg-white border border-gray-200 rounded-lg shadow dark:bg-gray-800 dark:border-gray-700 !mr-4">
        <div class="flex items-center justify-center">
          <%= cl_image_tag doctor.avatar.key, :width => 290, :height => 320, :crop => "fill" %>
        </div>
        <div class="p-5 text-center">
          <h5 class="!mb-2 text-2xl font-bold tracking-tight text-gray-900 dark:text-white"><%= doctor.first_name + ' ' + doctor.last_name %></h5>
          <% if doctor.appointments.where(status: 'open').count >= 10 %>
            <p class="text-white text-lg !w-32">This doctor doesn't have free slots now</p>
          <% else %>
            <%= link_to "Make an appointment", new_appointment_path(doctor_id: doctor.id), class: "!mb-2 mx-2 !text-white !no-underline bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-lg text-sm px-4 py-2 text-center mr-3 md:mr-0 dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800" %>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
</div>
